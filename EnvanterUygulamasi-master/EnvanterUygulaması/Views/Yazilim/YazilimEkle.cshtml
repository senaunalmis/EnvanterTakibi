@model EnvanterUygulaması.ViewModels.YazilimEkleDuzenleVM;
<div class="custom-container mt-5">
    <form asp-controller="Yazilim" asp-action="YazilimEkle" method="post">
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <div class="d-flex align-items ust-model ">
                    <label asp-for="MarkaId">Marka:</label>
                    @Html.DropDownListFor(model => model.MarkaId, new SelectList(Model.MarkaList, "id", "Adi"),"Marka seçiniz",
                    new { @class = "form-select", @id="MarkaDD",name="MarkaId"})
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <label asp-for="Adi">Adı:</label>
                <input asp-for="Adi" type="text" class="form-control">
            </div>
            <div class="col-md-4 col-sm-6">
                <label asp-for="Versiyonu">Versiyonu:</label>
                <input asp-for="Versiyonu" type="text" class="form-control">
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4 col-sm-6">
                <div class="ust-model  d-flex align-items">
                    <label asp-for="Turu">Tür:</label>
                    <select asp-for="Turu" class="form-select" aria-label="Default select example">
                        <option value="Sanal">Sanal</option>
                        <option value="Fiziksel">Fiziksel</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <label asp-for="CihazSayisi">Cihaz Sayısı:</label>
                <input asp-for="CihazSayisi" type="text" class="form-control">
            </div>
            
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label asp-for="AlimTarihi">Alım Tarihi:</label>
                <input asp-for="AlimTarihi" type="date" class="form-control">
            </div>
            <div class="col-md-4">
                <label asp-for="DestekSuresi">Destek Süresi:</label>
                <input asp-for="DestekSuresi" type=" text" class="form-control">
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label asp-for="Birimi">Birimi:</label>
                <select asp-for="Birimi" class="form-select custom-select" aria-label="Default select example">
                    <option value="1">4. Bölge</option>
                    <option value="2">vsvsvsvs</option>
                </select>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <label asp-for="Aciklama">Açıklama:</label>
                <textarea asp-for="Aciklama" class="form-control" aria-label="With textarea"></textarea>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12 d-flex justify-content-between">
                <button type="button" class="btn btn-danger">Vazgeç</button>
                &ensp;
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </form>
</div>
