@model List<EnvanterUygulaması.ViewModels.DonanimVM>

<div class="mt-5">
    <h3 class="text-center">Donanım Listesi</h3>
        <div class="input-group mt-3 mb-3">
            <input type="text" class="form-control" placeholder="Arama" aria-label="search" aria-describedby="basic-addon1">
          </div>
        <button class="btn btn-primary float-end">Detaylı Arama</button>
      </div>
      <br />
<div class="mt-5 table-responsive">
    <table class ="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Türü</th>
              <th>AltTürü</th>
              <th>Markası</th>
              <th>Üst Modeli</th>
              <th>Alt Modeli</th>
              <th>MAC Adresi</th>
              <th>Seri No</th>
              <th>Durumu</th>
              <th>Garanti Süresi</th>
              <th>Alım Tarihi</th>
              <th>Poe</th>
              <th>Ekleyen Kullanıcı</th>
              <th>Açıklama</th>
              <th>Bölge</th>
            </tr>
          </thead>
          <tbody>
           @foreach (var item in Model)
            {
                <tr>
                   <td>@item.Turu</td>
                   <td>@item.AltTuru</td>
                   <td>@item.Markasi</td>
                   <td>@item.UstModeli</td>
                   <td>@item.AltModeli</td>
                   <td>@item.MacAdresi</td>
                   <td>@item.SeriNo</td>
                   <td>@item.Durumu</td>
                   <td>@item.GarantiSuresi</td>
                   <td>@item.AlimTarihi</td>
                    @if (item.Poe == true)
                    {
                        <td>Var</td>
                    }
                    else if (item.Poe == false)
                    {
                        <td>Yok</td>
                    }
                    else
                    {
                        <td></td>
                    }
                   <td>@item.EkleyenKullanici</td>
                   <td>@item.Aciklama</td>
                   <td>@item.Bolge</td>
                </tr>
            }
        </tbody>
        </table>
      </div>