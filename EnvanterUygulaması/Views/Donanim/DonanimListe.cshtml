@model EnvanterUygulaması.Models.DonanimViewModel

@{
    ViewData["Title"] = "Donanım Listesi";
}

<h2>@ViewData["Title"]</h2>

<div class="mt-5">
    <h3 class="text-center">Donanım Listesi</h3>
        <div class="input-group mt-3 mb-3">
            <input type="text" class="form-control" placeholder="Arama" aria-label="search" aria-describedby="basic-addon1">
          </div>
        <button class="btn btn-primary float-right btn-turuncu">Detaylı Arama</button>
      </div>
<div class="mt-5 table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Markası</th>
              <th>Üst Modeli</th>
              <th>Alt Modeli</th>
              <th>MAC Adresi</th>
              <th>Seri No</th>
              <th>Durumu</th>
              <th>Garanti Süresi</th>
              <th>Alım Tarihi</th>
              <th>Adet</th>
              <th>Poe</th>
              <th>Açıklama</th>
              <th>Birim</th>
            </tr>
          </thead>
          <tbody>
           @foreach (var donanim in Model.Donanimlars)
            {
                <tr>
                    <td>@donanim.DonanimMarka</td>
                    <td>@donanim.UstModel</td>
                    <td>@donanim.AltModel</td>
                    <td>@donanim.MacAdresi</td>
                    <td>@donanim.SeriNo</td>
                    <td>@donanim.Durumu</td>
                    <td>@donanim.GarantiSuresi</td>
                    <td>@donanim.AlimTarihi</td>
                    <td>@donanim.Adedi</td>
                    <td>@donanim.Poe</td>
                    <td>@donanim.Aciklama</td>
                    <td>@donanim.Birim</td>
                </tr>
            }
        </tbody>
        </table>
      </div>