          <!-- Donanım -->
          <li class="nav-item">
            <a class="nav-link dropdown-toggle active baslik" data-bs-toggle="collapse" href="#donanimMenu" role="button" aria-expanded="false" aria-controls="donanimMenu">
              Donanım Yönetimi
            </a>
            <div class="collapse pl-3" id="donanimMenu">
              <ul class="nav flex-column altbaslik">
                <li class="nav-item">
                  <a class="nav-link baslik" href="/Donanim/EkledigimDonanimlar">Eklediğim Donanımlar</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link baslik" href="/Donanim/DonanimListe">Donanım Listesi</a>
                </li>
              </ul>
            </div>
          </li>
          <!-- Yazılım -->
          <li class="nav-item">
            <a class="nav-link dropdown-toggle active baslik" data-bs-toggle="collapse" href="#yazilimMenu" role="button" aria-expanded="false" aria-controls="yazilimMenu">
